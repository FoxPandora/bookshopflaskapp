FROM ubuntu:20.04
RUN apt update
RUN apt install python3 -y
RUN apt -y install python3-pip
RUN mkdir /app
WORKDIR /app
ADD requirements.txt /app
ADD . /app
RUN pip3 install -r requirements.txt
RUN export FLASK_APP=app.py
RUN export FLASk_ENV=development
EXPOSE 5000
CMD ["flask" , "run" ,"--host=0.0.0.0"]